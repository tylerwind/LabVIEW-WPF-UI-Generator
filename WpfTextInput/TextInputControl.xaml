<UserControl x:Class="WpfTextInput.TextInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#E3E6EC"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>

        <!-- 新拟态：外层暗阴影 -->
        <DropShadowEffect x:Key="NeumorphDark"
                          BlurRadius="10"
                          ShadowDepth="4"
                          Direction="315"
                          Color="#A3A9B5"
                          Opacity="0.5"/>

        <!-- 新拟态：内凹暗阴影 -->
        <DropShadowEffect x:Key="NeumorphInset"
                          BlurRadius="6"
                          ShadowDepth="2"
                          Direction="315"
                          Color="#A3A9B5"
                          Opacity="0.4"/>

        <!-- 聚焦动画 -->
        <Storyboard x:Key="FocusIn">
            <ColorAnimation Storyboard.TargetName="InputBorderBrush"
                            Storyboard.TargetProperty="Color"
                            To="#B0B8C8" Duration="0:0:0.25"/>
            <ColorAnimation Storyboard.TargetName="AccentLine"
                            Storyboard.TargetProperty="Color"
                            To="#7A8AA8" Duration="0:0:0.3"
                            EasingFunction="{StaticResource EaseOut}"/>
        </Storyboard>
        <Storyboard x:Key="FocusOut">
            <ColorAnimation Storyboard.TargetName="InputBorderBrush"
                            Storyboard.TargetProperty="Color"
                            To="#DDE0E6" Duration="0:0:0.2"/>
            <ColorAnimation Storyboard.TargetName="AccentLine"
                            Storyboard.TargetProperty="Color"
                            To="#E3E6EC" Duration="0:0:0.25"
                            EasingFunction="{StaticResource EaseOut}"/>
        </Storyboard>
    </UserControl.Resources>

    <!-- 整体填满容器，仅留最小边距给阴影 -->
    <Grid Margin="6">

        <!-- 第1层：亮高光（左上方光） -->
        <Border CornerRadius="12"
                Margin="-2,-2,2,2"
                Background="White"
                Opacity="0.65"/>

        <!-- 第2层：暗阴影（右下方） -->
        <Border CornerRadius="12"
                Background="#E3E6EC"
                Effect="{StaticResource NeumorphDark}"/>

        <!-- 第3层：主卡片 — 填满全部空间 -->
        <Border x:Name="MainCard"
                CornerRadius="12"
                Padding="12,8,12,6">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#EAEDF2" Offset="0"/>
                    <GradientStop Color="#E0E3E9" Offset="0.5"/>
                    <GradientStop Color="#D8DCE3" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush x:Name="InputBorderBrush" Color="#DDE0E6"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness>1</Thickness>
            </Border.BorderThickness>

            <DockPanel LastChildFill="True">
                <!-- 标签在顶部 -->
                <TextBlock x:Name="LabelBlock"
                           DockPanel.Dock="Top"
                           Text="标签"
                           FontFamily="Segoe UI"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#8A90A0"
                           Margin="4,0,0,4"/>

                <!-- 聚焦指示线在底部 -->
                <Border DockPanel.Dock="Bottom"
                        Height="2"
                        CornerRadius="1"
                        Margin="8,2,8,0">
                    <Border.Background>
                        <SolidColorBrush x:Name="AccentLine" Color="#E3E6EC"/>
                    </Border.Background>
                </Border>

                <!-- 文本输入区域 — 无内边框，直接融入卡片 -->
                <TextBox x:Name="InputBox"
                         FontFamily="Segoe UI"
                         FontSize="14"
                         Foreground="#3A3F50"
                         CaretBrush="#5A6070"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="10,4,10,4"
                         AcceptsReturn="False"
                         TextWrapping="NoWrap"
                         VerticalContentAlignment="Center"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         GotFocus="InputBox_GotFocus"
                         LostFocus="InputBox_LostFocus"
                         TextChanged="InputBox_TextChanged"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
